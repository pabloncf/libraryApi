<div id="book-page">
    <a href="/books">Voltar</a>
    <div class="container">
        <h1>{{book.title}}</h1>
        <p>Este livro tem {{book.pageqty}}</p>
        {{#if book.image_path}}
            <img src="{{book.image_path}}" alt="{{book.title}} capa">
        {{else}}
            <p>Imagem não disponível.</p>
        {{/if}}
    </div>
</div>